{
  "manifest_version": 3,
  "name": "GitHub Actions Scroll Helper",
  "description": "Adds a ‚è¨ scroll to bottom control to GitHub Actions log panes.",
  "version": "0.1.0",
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/actions/runs/*/job/*",
        "https://github.com/*/actions/runs/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://github.com/*"
  ]
}

